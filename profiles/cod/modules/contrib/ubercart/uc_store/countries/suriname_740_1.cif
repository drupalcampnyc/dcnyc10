<?php

/**
 * First implement hook_install() using the name of the country as the base of
 * the function name.
 */
function suriname_install() {
  db_query("INSERT INTO {uc_countries} (country_id, country_name, country_iso_code_2, country_iso_code_3, version) VALUES (740, 'Suriname', 'SR', 'SUR', 1)");

  // Make the entries in the zones table.
  $zones = array(
    array(740, 'BR', 'Brokopondo'),
    array(740, 'CM', 'Commonwijne'),
    array(740, 'CR', 'Coronie'),
    array(740, 'MA', 'Marowijne'),
    array(740, 'NI', 'Nickerie'),
    array(740, 'PR', 'Para'),
    array(740, 'PM', 'Paramaribo'),
    array(740, 'SA', 'Saramacca'),
    array(740, 'SI', 'Sipaliwini'),
    array(740, 'WA', 'Wanica'),
  );

  foreach ($zones as $zone) {
    db_query("INSERT INTO {uc_zones} (zone_country_id, zone_code, zone_name) VALUES (%d, '%s', '%s')", $zone);
  }

  uc_set_address_format(740,
    "!company\r\n!first_name !last_name\r\n!street1\r\n!street2"
   ."\r\n!city !zone_code !postal_code\r\n!country_name_if");
}
