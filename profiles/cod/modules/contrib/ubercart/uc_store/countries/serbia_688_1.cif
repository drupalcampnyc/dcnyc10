    array(688, '20', 'Nisava'),
    array(688, '24', 'Pcinja'),
    array(688, '22', 'Pirot'),
    array(688, '10', 'Podunavlje'),
    array(688, '13', 'Pomoravlje'),
    array(688, '19', 'Rasina'),
    array(688, '18', 'Raska'),
    array(688, '12', 'Sumadija'),
    array(688, '21', 'Toplica'),
